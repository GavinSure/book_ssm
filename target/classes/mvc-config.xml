<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!--开启包扫描-->
    <context:component-scan base-package="com.Gavin.controller"/>
    <context:component-scan base-package="com.Gavin.exception"/>
    <context:component-scan base-package="com.Gavin.util"/>
    <context:component-scan base-package="com.Gavin.interceptor"/>
    <!--2.开启mvc注解驱动-->
    <mvc:annotation-driven/>
    <!--3.视图解析器-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/page/"/>
        <property name="suffix" value=".html"/>
    </bean>
    <!--4.静态资源访问-->
    <mvc:default-servlet-handler/>
    <!--5.文件上传-->
    <bean class="org.springframework.web.multipart.commons.CommonsMultipartResolver" id="multipartResolver">
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>
    <!--6.类型转换器-->  <!--服务于日期-->
    <!--7.拦截器-->
    <!--8.跨域-->
    <mvc:cors>
        <mvc:mapping path="/**" allowed-origin-patterns="*" allowed-methods="*" allow-credentials="true"
                     exposed-headers="*"/>
    </mvc:cors>
    <!--9.集成mail开发-->
    <bean class="org.springframework.mail.javamail.JavaMailSenderImpl" id="javaMailSender">
        <property name="host" value="smtp.163.com"/>
        <property name="username" value="swimmingsure@163.com"/>
        <property name="password" value="QZYIZDIYPVVLUUSJ"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>
    <!--10.集成reids-->
    <bean class="redis.clients.jedis.JedisPool" id="jedisPool">
        <constructor-arg name="host" value="127.0.0.1"/>
        <constructor-arg name="port" value="6379"/>
        <constructor-arg name="poolConfig">
            <bean class="redis.clients.jedis.JedisPoolConfig">
                <property name="maxTotal" value="20"/>
                <property name="maxIdle" value="10"/>
            </bean>
        </constructor-arg>
    </bean>

    <!--11.配置拦截器-->
